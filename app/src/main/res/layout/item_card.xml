<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    card_view:cardCornerRadius="6dp"
    card_view:cardElevation="8dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:nestedScrollingEnabled="false">

        <ImageView
            android:id="@+id/ivThumbnail"
            android:layout_width="match_parent"
            android:layout_height="325dp"
            android:adjustViewBounds="true"
            android:src="@drawable/background_splash"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:cropToPadding="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Loading..."
            android:id="@+id/tvRestName"
            android:layout_below="@id/ivThumbnail"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="Desc"
            android:id="@+id/tvCat"
            android:layout_below="@id/tvRestName"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="12sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvDist"
            android:layout_below="@id/tvCat"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="12sp"
            android:layout_marginBottom="5dp"
            android:text="distance"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="Large Text"
            android:textSize="10sp"
            android:id="@+id/tvMutual"
            android:layout_below="@id/tvDist"
            android:layout_marginTop="2sp"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="12sp" />

        <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/ivLiked"
        android:src="@drawable/ic_spooned"
        android:visibility="invisible"
        android:layout_alignBottom="@id/tvRestName"
        android:layout_alignParentEnd="true" />
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/ivDisliked"
            android:src="@drawable/ic_knifed"
            android:visibility="invisible"
            android:layout_alignBottom="@id/tvRestName"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

</android.support.v7.widget.CardView>